<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinalActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".FinalActivity" >

        <TextView
            android:id="@+id/texty"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=""
            android:textSize="55pt"
            />

        <TextView
            android:id="@+id/appname"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/texty"
            android:text="Success!"
            android:layout_centerInParent="true"
            android:textSize="12pt"
            />

        <TextView
            android:id="@+id/blankspace"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/appname"
            android:text=" "
            android:layout_centerInParent="true"
            android:textSize="3pt"
            />
        <TextView
            android:id="@+id/madeby"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/blankspace"
            android:text="Your entry has been submitted into the Color Q database."
            android:layout_centerInParent="true"
            android:textSize="5pt"
            />
        <TextView
            android:id="@+id/blankspace2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/madeby"
            android:text=" "
            android:layout_centerInParent="true"
            android:textSize="5pt"
            />

        <Button
            android:id="@+id/StartBtn"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/blankspace2"
            android:layout_weight="1"
            android:layout_centerInParent="true"
            android:textSize="7pt"
            android:onClick="exitApp"
            android:text="EXIT" />

        <TextView
            android:id="@+id/blankspace3"
            android:layout_height="wrap_content"
            android:layout_width="272dp"
            android:layout_below="@+id/StartBtn"
            android:text=" "
            android:layout_centerInParent="true"
            android:textSize="3pt"
            />

        <Button
            android:id="@+id/Btn"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/blankspace3"
            android:layout_weight="1"
            android:layout_centerInParent="true"
            android:textSize="7pt"
            android:onClick="runTest"
            android:text="RUN ANOTHER TEST" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>