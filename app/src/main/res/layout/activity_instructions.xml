<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InstructionsActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".ResultsActivity" >


        <TextView
            android:id="@+id/text_view_id"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Instructions"
            android:textSize="12pt"
            />

        <TextView
            android:id="@+id/blank0"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/text_view_id"
            android:text=""
            android:textSize="2pt"
            />

        <TextView
            android:id="@+id/results1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/blank0"
            android:text="Begin by positioning your phone camera in the designated box on top of the Chrom-Q system. Use your phone camera to take a photo of the grid. Enter the Color Q app and click the Start button. Choose the photo that you just took from the image gallery. Once the photo is displayed, process the image to undergo color analysis. Wait up to 2 minutes as this process may vary for different phones. Then, the results will be displayed on the next page. If you are finished, then you may click the Exit button to return to the main menu. If you would like to save the result, continue to fill out the form and then wait for the data to be sent to the server."
            android:textSize="8pt" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>