<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MenuActivity" >

    <TextView
        android:id="@+id/texty"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text=""
        android:textSize="25pt"
        />

        <ImageView
            android:id="@+id/mImageView"
            android:layout_width="500px"
            android:layout_height="500px"
            android:layout_below="@+id/texty"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/aquantify" />

    <TextView
        android:id="@+id/appname"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/mImageView"
        android:text="Color Q"
        android:layout_centerInParent="true"
        android:textSize="12pt"
        />

    <TextView
        android:id="@+id/blankspace"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/appname"
        android:text=" "
        android:layout_centerInParent="true"
        android:textSize="3pt"
        />
    <TextView
        android:id="@+id/madeby"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/blankspace"
        android:text="By Lambert iGEM"
        android:layout_centerInParent="true"
        android:textSize="5pt"
        />
    <TextView
        android:id="@+id/blankspace2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/madeby"
        android:text=" "
        android:layout_centerInParent="true"
        android:textSize="5pt"
            />

        <Button
            android:id="@+id/StartBtn"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/blankspace2"
            android:layout_weight="1"
            android:layout_centerInParent="true"
            android:textSize="7pt"
            android:onClick="startApp"
            android:text="START" />

        <TextView
            android:id="@+id/blankspace3"
            android:layout_height="wrap_content"
            android:layout_width="272dp"
            android:layout_below="@+id/StartBtn"
            android:text=" "
            android:layout_centerInParent="true"
            android:textSize="3pt"
            />

        <Button
            android:id="@+id/Btn"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/blankspace3"
            android:layout_weight="1"
            android:layout_centerInParent="true"
            android:textSize="7pt"
            android:onClick="instructApp"
            android:text="INSTRUCTIONS" />

        <TextView
            android:id="@+id/blankspace4"
            android:layout_height="wrap_content"
            android:layout_width="272dp"
            android:layout_below="@+id/Btn"
            android:text=" "
            android:layout_centerInParent="true"
            android:textSize="3pt"
            />

        <Button
            android:id="@+id/CreditBtn"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/blankspace4"
            android:layout_weight="1"
            android:layout_centerInParent="true"
            android:textSize="7pt"
            android:onClick="creditApp"
            android:text="CREDITS" />
    </RelativeLayout>


    </android.support.constraint.ConstraintLayout>