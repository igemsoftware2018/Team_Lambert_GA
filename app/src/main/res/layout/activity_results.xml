<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultsActivity">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".ResultsActivity" >


        <TextView
            android:id="@+id/text_view_id"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/results_title"
            android:textSize="12pt"
            />

        <TextView
            android:id="@+id/blank0"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/text_view_id"
            android:text=""
            android:textSize="2pt"
            />

        <ImageView android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="170dp"
            android:layout_below="@+id/blank0"
            android:alpha="0.7"
            android:scaleType="centerCrop"
            android:src="@drawable/grid"
            />

        <TextView
            android:id="@+id/blank1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/image_view"
            android:text=""
            android:textSize="2pt"
            />

        <TextView
            android:id="@+id/poscontrol"
            android:layout_height="250dp"
            android:layout_width="fill_parent"
            android:layout_below="@+id/blank1"
            android:scrollbars="vertical"
            android:text="Positive Control:\nNegative Control:\nRow 1:\nRow 2:\nRow 3:\nRow 4:\nRow 5:\nRow 6:"
            android:textSize="8pt"
            />

        <TextView
            android:id="@+id/blank11"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/poscontrol"
            android:text=""
            android:textSize="2pt"
            />
        <Button
            android:id="@+id/SaveBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/blank11"
            android:layout_weight="1"
            android:onClick="saveResult"
            android:text="Save"
            />
        <TextView
            android:id="@+id/blank4"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/SaveBtn"
            android:text=""
            android:textSize="2pt"
            />

        <Button
            android:id="@+id/ExitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/blank4"
            android:layout_weight="1"
            android:onClick="onbuttonClick"
            android:text="Exit" />



    </RelativeLayout>


</android.support.constraint.ConstraintLayout>

